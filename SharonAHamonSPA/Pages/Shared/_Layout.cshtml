@{var title = @ViewData["Title"] + " | Sharon A. Hamon"; }

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="description" content="Web Development Resources" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta property="og:title" content="Sharon A. Hamon" />
    <meta property="og:description" content="Web Development Resources" />
    <meta property="og:image" content="https://www.sharonahamon.com/images/standing.png" />
    <meta property="og:url" content="https://www.sharonahamon.com" />
    <meta property="og:site_name" content="Sharon A. Hamon" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="https://www.sharonahamon.com" />
    <meta name="twitter:image:alt" content="Sharon A. Hamon" />
    <meta name="twitter:app:country" content="US">
    <meta name="twitter:creator" content="Sharon A. Hamon" />
    <title>@{@title}</title>
    <link href="https://fonts.googleapis.com/css?family=Homemade+Apple" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="icon" href="https://en.gravatar.com/userimage/142998852/de3f5bfc19695f5544f589846522268e.png">
    <!--link rel="manifest" href="~/manifest.json"-->
    <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>

    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/grid.css" />

    <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/css/bootstrap.min.css"
          asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
          asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />

    <script type="text/javascript" src="https://sharonahamon.atlassian.net/s/d41d8cd98f00b204e9800998ecf8427e-T/-le44p9/b/24/a44af77267a987a660377e5c46e0fb64/_/download/batch/com.atlassian.jira.collector.plugin.jira-issue-collector-plugin:issuecollector/com.atlassian.jira.collector.plugin.jira-issue-collector-plugin:issuecollector.js?locale=en-US&collectorId=2157a74b"></script>
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <!--
    <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
            <li><a asp-page="/Index">Welcome</a></li>
            <li><a asp-page="/Privacy">Privacy Policy</a></li>
        </ul>
    </div>
        -->
        </div>
    </nav>

    <partial name="_CookieConsentPartial" />

    <div class="container body-content">
        <header id="sah_banner" name="sah_banner" role="banner">
            <span id="sah_site_logo">
                <a asp-page="/Index" class="navbar-brand"><img src="~/images/standing.png" alt="Welcome Page" /></a>
            </span>

            <span id="sah_site_name">
                <span role="heading">Sharon A. Hamon</span>
            </span>

            <span id="sah_social_media_icons_header">
                <a href="https://www.facebook.com/SharonAHamon" class="fa fa-facebook" aria-label="Facebook"></a>
                <a href="https://twitter.com/SharonAHamon" class="fa fa-twitter" aria-label="Twitter"></a>
                <a href="https://github.com/sharonahamon/" class="fa fa-github" aria-label="Github"></a>
            </span>
        </header>

        <nav>
            <ul>
                <li><a href="https://www.sharonahamon.com/Accessibility">Accessibility</a> | </li>
                <li><a href="https://www.sharonahamon.com/Business">Business</a> | </li>
                <li><a href="https://www.sharonahamon.com/Design">Design</a> | </li>
                <li><a href="https://www.sharonahamon.com/Freelance">Freelance</a> | </li>
                <li><a href="https://www.sharonahamon.com/Prototyping">Prototyping</a> | </li>
                <li><a href="https://www.sharonahamon.com/Testing">Testing</a></li>
            </ul>
        </nav>

        @RenderBody()
        @{
            String currentYear = @DateTime.Now.ToString("yyyy");
            String displayYear = currentYear.Equals("2018") ? currentYear : "2018-" + currentYear;
        }
    <footer>
        <hr />
        <p><small>Disclaimer: I am not being paid to publish these links, nor have I necessarily visited them all or use them regularly.  For your safety, make sure your computer firewall and anti-virus software is up-to-date before clicking any links on this site.</p>

        <p>&copy; @displayYear Sharon A. Hamon </p>

        <nav role="navigation">
            <p><a href="https://www.sharonahamon.com/privacy">Privacy Policy</a></p>
        </nav>

        <span id="sah_social_media_icons_footer">
            <a href="https://www.facebook.com/SharonAHamon" class="fa fa-facebook" aria-label="Facebook"></a>
            <a href="https://twitter.com/SharonAHamon" class="fa fa-twitter" aria-label="Twitter"></a>
            <a href="https://github.com/sharonahamon/" class="fa fa-github" aria-label="Github"></a>
        </span>
    </footer>
    </div>


        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.3.1.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha384-tsQFqpEReu7ZLhBV2VZlAu7zcOV+rXbYlF2cqB8txI/8aZajjp4Bqd+V6D5IgvKT">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                crossorigin="anonymous"
                integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa">
        </script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>